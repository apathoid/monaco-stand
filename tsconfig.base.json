{
    "compilerOptions": {
        "target": "esnext",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "noImplicitAny": true,
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    }
}
